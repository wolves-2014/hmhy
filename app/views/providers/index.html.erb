  <div class="row" id="providers-results">
    <div class="col-sm-4" id="search-box">
      <h4>Refine your search:</h4>
      <%= form_for :refine_search, remote: true, url: "/providers", html: { method: 'GET', id: "search-form"} do |f| %>
        <%= f.text_field :zip_code, value: "", placeholder: "zip code" %><br>
        <%= f.label 'Search Radius (in miles)' %>
        <%= f.number_field(:distance, in: 1..200, step: 1)%>
        <br><%= f.label 'Insurance' %><%= f.select 'insurance_id', options_from_collection_for_select(Insurance.all, :id, :name) %>
        <%= f.label 'Sliding Scale?' %> <%= f.check_box :sliding_scale %><br>
        <%= f.label 'Maximum Price' %>
        <%= f.number_field(:max_price, in: 50..500, step: 50)%><br>
        <%= f.label 'Age Group' %>
        <%= f.select 'generation_id', options_from_collection_for_select(AgeGroup.all, :id, :generation) %>
        <%= f.submit "Search" %>
      <% end %>

    </div>
    <div class="col-sm-1">
    </div>


    <div class="col-sm-4 text-center">
      <h3 class="text-shadow2" id="providers-header">We think these people may be able to help...</h3>
    </div>
  </div>
  <%= render partial: "show",
             collection: @providers, as: :provider,
             locals: {location: @location} %>

