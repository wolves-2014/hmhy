<div class="container-fluid" id="results-container">
  <div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4 text-center">
      <h3>We think these people may be able to help...</h3>
    </div>
  </div>
  <% @providers.each do |provider| %>
    <%= render partial: "providers/show", layout: false, locals: {provider: provider} %>
  <% end %>
</div>

<div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="contactModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="contactModalLabel">Message</h4>
      </div>
      <div class="modal-body">
        <form role="form">
          <div class="form-group">
            <label for="recipient-name" class="control-label">Your Email*:</label>
            <input type="text" class="form-control" id="user-email">
          </div>
          <div class="form-group">
            <label for="recipient-name" class="control-label">Your name:</label>
            <input type="text" class="form-control" id="user-name">
          </div>
          <div class="form-group">
            <label for="message-text" class="control-label">Message:</label>
            <p>Anything else you'd like to provide?</p>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <div class="text-left" id="privacy-terms">
          <a href="#privacy-terms">Your privacy is important to us.</a>
        </div>
        <div>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button id="contact-me-button" type="button" class="btn btn-primary">Send</button>
        </div>
      </div>
    </div>
  </div>
</div>

